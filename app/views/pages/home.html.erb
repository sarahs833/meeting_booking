<div class="jumbotron text-center">
  <h1 class="display-4"><%= t '.welcome' %></h1>
  <p class="lead"><%= t '.banner_paragraph' %></p>
  <hr class="my-4">
  <p><%= t '.banner_catching_paragraph' %></p>
  <%=link_to t('.create_meeting_button'),new_meeting_path, class:'btn btn-primary btn-lg' %>
</div>

<div class="container">
  <%= month_calendar events: @meetings do |date, meetings| %>
  <%= date %>

  <% meetings.each do |meeting| %>
    <div>
      <%=link_to meeting.name, meeting_path(meeting.id) %>
      <p>from <%=meeting.start_date_format%> till <%=meeting.end_date_format%></p>
      <p><%=meeting_tag(meeting)%></p>
    </div>
  <% end %>
<% end %>
</div>
